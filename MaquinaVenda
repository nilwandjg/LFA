<html><head>
	<title>Máquina de Venda</title>
	<meta charset="UTF-8">
</head>
<body><script>
	window.confirm("Olá, cada Coca-Cola custa $0.45.\n\nObs: aceitamos apenas moedas de 10 e/ou 25 centavos.");

	var moeda = 0;
	var total = 0;

	moeda = Number(window.prompt("Por favor, insira o dinheiro:"));
	if(moeda == 25 || moeda == 10){
		total += moeda;
	}

	while(total < 45){
		moeda = Number(window.prompt("Por favor, insira mais dinheiro:"));
		if(moeda == 25 || moeda == 10){
			total += moeda;
		}
	}

	window.alert("Retire sua Coca-Cola!");
	
	//window.alert(total);

</script></body>
</html>
